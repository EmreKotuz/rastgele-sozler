<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/modAc"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@mipmap/sozbulucu"
                android:fontFamily="sans-serif-black"
                android:text="Moduna Göre Söz Bulucu"
                android:textSize="24sp"
                android:visibility="gone"
                app:backgroundTint="@color/black"
                app:backgroundTintMode="add" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/teal_200" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <Button
                android:id="@+id/sizyazin"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@mipmap/sizyazin"
                android:fontFamily="sans-serif-black"
                android:textSize="35sp"
                android:text="SİZ YAZIN (sosyal)"
                app:backgroundTint="@color/black"
                app:backgroundTintMode="add" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/durum"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@mipmap/durum"
                android:fontFamily="sans-serif-black"
                android:text="Durum Sözleri"
                android:textSize="24sp"
                app:backgroundTint="@color/black"
                app:backgroundTintMode="add" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/sarki"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@mipmap/sarki"
                android:fontFamily="sans-serif-black"
                android:text="Şarkı Sözleri"
                android:textSize="24sp"
                app:backgroundTint="@color/black"
                app:backgroundTintMode="add" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/kisa"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@mipmap/kisa"
                android:fontFamily="sans-serif-black"
                android:text="Kısa Sözler"
                android:textSize="24sp"
                app:backgroundTint="@color/black"
                app:backgroundTintMode="add" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/anlamli"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@mipmap/anlamli"
                android:fontFamily="sans-serif-black"
                android:text="Anlamlı Sözler"
                android:textSize="24sp"
                app:backgroundTint="@color/black"
                app:backgroundTintMode="add" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/agirSoz"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@mipmap/agir"
                android:fontFamily="sans-serif-black"
                android:text="Ağır Sözler"
                android:textSize="24sp"
                app:backgroundTint="@color/black"
                app:backgroundTintMode="add" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>